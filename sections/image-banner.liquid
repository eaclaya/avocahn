<div class="flex flex-col items-center justify-end bg-brand-yellow h-[500px] w-full mb-32">
  <div class="flex align-bottom w-full max-w-screen-xl">
    <div class="w-1/3 flex align-bottom">
      {% if section.settings.image != blank %}
        {{section.settings.image | image_url: width: 370 | image_tag: loading: 'lazy', class: 'w-full max-w-[370px]'}}
      {% endif %}
    </div>
    <div class="w-2/3 flex flex-col justify-center gap-8">
      <h1 class="text-8xl font-playfair text-left">{{section.settings.title}}</h1>
      <h4 class="text-3xl text-left">{{section.settings.subtitle}}</h4>
      {% if section.settings.link %}
        <a href="{{section.settings.link}}" class="uppercase border border-2 border-white text-white font-bold w-[221px] h-[62px] text-3xl flex flex-col justify-center items-center"><span>Contact us</span></a>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
 "name": "Image Banner",
 "class": "section",
"settings": [
 {
   "type": "image_picker",
   "id": "image",
   "label": "Hero Image"
 },
 {
  "type": "text",
  "id": "title",
  "default": "Hero Title",
  "label": "Hero Title"
},
{
  "type": "text",
  "id": "subtitle",
  "default": "Hero Subtitle",
  "label": "Hero Subtitle"
},
{
  "type": "url",
  "id": "link",
  "label": "Hero Link"
}
]
}
{% endschema %}