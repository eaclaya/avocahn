<div class="flex flex-col justify-center items-center mb-72">
    <div class="flex flex-col w-full max-w-screen-xl justify-center items-center">
        <h2 class="text-7xl text-center mb-12 font-playfair">{{section.settings.title}}</h2>
        <h4 class="text-4xl text-center text-gray-300 mb-18 font-domine max-w-[980px]">{{section.settings.subtitle}}</h4>
        <div class="grid grid-cols-3 gap-12">
            {% for item in section.settings.engineers.products %}
                {% if forloop.index <= section.settings.max_count %}
                {% render 'card-engineer', item: item %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
   "name": "Featured Engineers",
   "class": "featured__engineers",
   "tag": "section",
   "settings": [
       {
           "type": "text",
           "id": "title",
           "label": "Title",
           "default": "Default Title"
       },
       {
        "type": "text",
        "id": "subtitle",
        "label": "Sub Title",
        "default": "Default Subtitle"
    },
    {
        "type": "collection",
        "id": "engineers",
        "label": "Collection"
    },
    {
        "type": "range",
        "id": "max_count",
        "label": "Max Items Count",
        "min": 1,
        "max": 6,
        "step": 1,
        "default": 1
    }
   ],
  "presets": [
      {
          "category": "Featured Engineers",
          "name":"Featured Engineers"
      }
  ]
}
{% endschema %}